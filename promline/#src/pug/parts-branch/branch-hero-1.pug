mixin hb-item(img, text)
  .hero-branch__list-item
    .hero-branch__item-img
      img(src=img, alt="")
    .hero-branch__item-desc=text

section.hero-branch 
  .container 
    .breadcrumbs Главная >> решение задач >> #[a(href="javascript:void(0)") горнодобывающая отрасль]

    .h1-title
      h1 Горнодобывающая отрасль
      p Мобильность, легкость, качество!
    
    .yellow-list
      .yellow-list__item Добыча благородных, цветных, черных и редких металлов. 
      .yellow-list__item Добыча драгоценных камней
      .yellow-list__item Добыча угля
      .yellow-list__item Добыча горнохимического и горнотехнического сырья
      .yellow-list__item Добыча солей и рассолов
      .yellow-list__item Добыча строительных материалов

    .hero-branch__list
      +hb-item('img/hb-1.1.jpg', 'Транспортировка воды технической и оборотной, с примесью механических частиц')
      +hb-item('img/hb-1.2.jpg', 'Водоводы, карьерные водоотливы, системы орошения при выщелачивании')
      +hb-item('img/hb-1.3.jpg', 'Подача воды на промывочные приборы')
      +hb-item('img/hb-1.4.jpg', 'Дренаж рудников, месторождений, шахт')
      +hb-item('img/hb-1.5.jpg', 'Подача воды при разработке месторождений')
      +hb-item('img/hb-1.6.jpg', 'Грунтопровод, водо-грунтопровод, шлакоудаление, пульпопровод, перекачка бурового шлама, глины, песка, гравия и т.д.')
      +hb-item('img/hb-1.7.jpg', 'Перекачка ГСМ')
      +hb-item('img/hb-1.8.jpg', 'Подача питьевой воды для обеспечения вахотовых поселков')
      +hb-item('img/hb-1.9.jpg', 'Временные байпасы на аварийных участках или на время профилактики трубопроводов')
